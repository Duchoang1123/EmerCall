<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emeracc_activity">

    <!-- Content Container -->

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar_main"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/splash_creen"
            android:layout_marginTop="55dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/emeracc_subtitle"
                android:textColor="@color/colorTitle"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgMain"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:src="@drawable/emeraccount_big_image" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_shape"
                android:text="Trần Hữu Nhật Huy"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                />

            <TextView
                android:id="@+id/tvDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_shape"
                android:text="07/08/2000"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_birthday"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                />

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_shape"
                android:text="Nam"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_gender"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                />

            <TextView
                android:id="@+id/tvID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_shape"
                android:text="102180072	"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_id"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textview_shape"
                android:drawableLeft="@drawable/ic_address"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="18T2 Đại học Bách khoa Đà Nẵng"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvCMND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_shape"
                android:text="191914372"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_calendar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                />

            <Button
                android:id="@+id/btnCustomize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="120dp"
                android:text="Change information"
                android:padding="15dp"
                android:textSize="15dp"
                style="@style/AppTheme.Button" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bottom_navigation_bar"
        android:id="@+id/bottom_navigation_emeracc"
        />

</RelativeLayout>