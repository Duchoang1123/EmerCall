<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FC3A52">

        <TextView
            android:id="@+id/fragment4_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:text="Enter user information"
            android:textColor="#fff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/fragment4_text1"
            android:layout_below="@+id/fragment4_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:text="@string/fragment4_text1"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_below="@+id/fragment4_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_shape"
            android:inputType="text"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_account_circle_white_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:drawablePadding="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:hint="Name"
            />

        <EditText
            android:id="@+id/edtDOB"
            android:layout_below="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_shape"
            android:inputType="date"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_birthday_white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:drawablePadding="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:hint="Date of birth"
            />

        <EditText
            android:id="@+id/edtGender"
            android:layout_below="@+id/edtDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_shape"
            android:inputType="text"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_gender_white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:drawablePadding="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:hint="Gender"
            />

        <EditText
            android:id="@+id/edtID"
            android:layout_below="@+id/edtGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_shape"
            android:inputType="text"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_id_white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:drawablePadding="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:hint="Health Insurance ID"
            />

        <EditText
            android:id="@+id/edtAddress"
            android:layout_below="@+id/edtID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_shape"
            android:inputType="text"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_address_white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:drawablePadding="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:hint="Address"
            />

        <EditText
            android:id="@+id/edtCMND"
            android:layout_below="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_shape"
            android:inputType="datetime"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_calendar_white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:hint="Personal ID"
            />

        <LinearLayout
            android:layout_below="@+id/edtCMND"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:text="4/6"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="#f5586c"
                    android:text="Next"
                    android:textColor="#fff"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>